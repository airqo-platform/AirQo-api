{
    "appenders": {
        "access": {
            "type": "dateFile",
            "filename": "log/access.log",
            "pattern": "-yyyy-MM-dd",
            "category": "http"
        },
        "app": {
            "type": "file",
            "filename": "log/app.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "errorFile": {
            "type": "file",
            "filename": "log/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        },
        "alerts": {
            "type": "@log4js-node/slack",
            "token": "abc123def",
            "channel_id": "channel_id",
            "username": "username"
        }
    },
    "categories": {
        "default": { "appenders": ["app", "errors"], "level": "DEBUG" },
        "http": { "appenders": ["access"], "level": "DEBUG" }
    }
}